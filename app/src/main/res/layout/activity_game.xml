<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#afa"
    tools:context="com.harrisonwelch.blackjack.GameActivity">

    <android.support.constraint.Guideline
        android:id="@+id/guideline_25Perc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_75Perc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="403dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.49" />

    <TableLayout
        android:id="@+id/dealerCards"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toTopOf="@+id/textView11"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_table1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:contentDescription="@string/exampleCard"
                android:scaleType="fitCenter"
                android:src="@drawable/nicholstare" />

            <ImageView
                android:id="@+id/iv_table2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:contentDescription="@string/exampleCard"
                android:scaleType="fitCenter"
                android:src="@drawable/nicholstare" />

            <ImageView
                android:id="@+id/iv_table3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:contentDescription="@string/exampleCard"
                android:scaleType="fitCenter"
                android:src="@drawable/nicholstare" />

            <ImageView
                android:id="@+id/iv_table4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:contentDescription="@string/exampleCard"
                android:scaleType="fitCenter"
                android:src="@drawable/nicholstare" />

            <ImageView
                android:id="@+id/iv_table5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:contentDescription="@string/exampleCard"
                android:scaleType="fitCenter"
                android:src="@drawable/nicholstare" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_table6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:contentDescription="@string/exampleCard"
                android:scaleType="fitCenter"
                android:src="@drawable/nicholstare" />

            <ImageView
                android:id="@+id/iv_table7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:contentDescription="@string/exampleCard"
                android:scaleType="fitCenter"
                android:src="@drawable/nicholstare" />

            <ImageView
                android:id="@+id/iv_table8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:contentDescription="@string/exampleCard"
                android:scaleType="fitCenter"
                android:src="@drawable/nicholstare" />

            <ImageView
                android:id="@+id/iv_table9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:contentDescription="@string/exampleCard"
                android:scaleType="fitCenter"
                android:src="@drawable/nicholstare" />

            <ImageView
                android:id="@+id/iv_table10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:contentDescription="@string/exampleCard"
                android:scaleType="fitCenter"
                android:src="@drawable/nicholstare" />
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/textView11"
        style="@style/infoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/dealerTotal"
        app:layout_constraintBottom_toTopOf="@+id/playerCards"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_dealerScore"
        style="@style/infoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/zero"
        app:layout_constraintBottom_toTopOf="@+id/playerCards"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView11" />


    <TableLayout
        android:id="@+id/playerCards"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toTopOf="@+id/textView13"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gameState_textview">


        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_card1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:contentDescription="@string/exampleCard"
                android:scaleType="fitCenter"
                android:src="@drawable/nicholstare" />

            <ImageView
                android:id="@+id/iv_card2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:contentDescription="@string/exampleCard"
                android:scaleType="fitCenter"
                android:src="@drawable/nicholstare" />

            <ImageView
                android:id="@+id/iv_card3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:contentDescription="@string/exampleCard"
                android:scaleType="fitCenter"
                android:src="@drawable/nicholstare" />

            <ImageView
                android:id="@+id/iv_card4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:contentDescription="@string/exampleCard"
                android:scaleType="fitCenter"
                android:src="@drawable/nicholstare" />

            <ImageView
                android:id="@+id/iv_card5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:contentDescription="@string/exampleCard"
                android:scaleType="fitCenter"
                android:src="@drawable/nicholstare" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_card6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:contentDescription="@string/exampleCard"
                android:scaleType="fitCenter"
                android:src="@drawable/nicholstare" />

            <ImageView
                android:id="@+id/iv_card7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:contentDescription="@string/exampleCard"
                android:scaleType="fitCenter"
                android:src="@drawable/nicholstare" />

            <ImageView
                android:id="@+id/iv_card8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:contentDescription="@string/exampleCard"
                android:scaleType="fitCenter"
                android:src="@drawable/nicholstare" />

            <ImageView
                android:id="@+id/iv_card9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:contentDescription="@string/exampleCard"
                android:scaleType="fitCenter"
                android:src="@drawable/nicholstare" />

            <ImageView
                android:id="@+id/iv_card10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:contentDescription="@string/exampleCard"
                android:scaleType="fitCenter"
                android:src="@drawable/nicholstare" />

        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/textView13"
        style="@style/infoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        android:text="@string/currentScore"
        app:layout_constraintBottom_toBottomOf="@+id/line4"
        app:layout_constraintStart_toStartOf="@+id/guideline3" />

    <TextView
        android:id="@+id/tv_playerScore"
        style="@style/infoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/zero"
        app:layout_constraintBottom_toBottomOf="@+id/textView13"
        app:layout_constraintStart_toEndOf="@+id/textView13" />

    <TextView
        android:id="@+id/textView15"
        style="@style/infoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/currentBet"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintStart_toStartOf="@+id/guideline3" />

    <TextView
        android:id="@+id/bet_textview"
        style="@style/infoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/zero"
        app:layout_constraintBottom_toBottomOf="@+id/verticalLine"
        app:layout_constraintStart_toEndOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView2"
        style="@style/infoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/currentMoneyNoSign"
        app:layout_constraintBottom_toTopOf="@+id/textView8"
        app:layout_constraintStart_toEndOf="@+id/verticalLine" />

    <TextView
        android:id="@+id/textView8"
        style="@style/infoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/dollarSign"
        app:layout_constraintBottom_toBottomOf="@+id/mainMoney_textview"
        app:layout_constraintStart_toEndOf="@+id/verticalLine"
        tools:layout_editor_absoluteY="456dp" />

    <TextView
        android:id="@+id/textView5"
        style="@style/infoText"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/dollarSign"
        app:layout_constraintBottom_toBottomOf="@+id/bet_textview"
        app:layout_constraintStart_toStartOf="@+id/guideline3" />

    <TextView
        android:id="@+id/mainMoney_textview"
        style="@style/infoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/zero"
        app:layout_constraintBottom_toBottomOf="@+id/verticalLine"
        app:layout_constraintStart_toEndOf="@+id/textView8" />

    <View
        android:id="@+id/verticalLine"
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:background="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/line5"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />

    <View
        android:id="@+id/line4"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="#000000"
        app:layout_constraintBottom_toTopOf="@+id/textView15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/line5"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="35dp"
        android:background="#000000"
        app:layout_constraintBottom_toTopOf="@+id/btn_hit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView8" />

    <Button
        android:id="@+id/updateBet_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="8dp"
        android:enabled="false"
        android:text="Set Bet Amount"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_reset"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_hit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:enabled="true"
        android:text="HIT"
        app:layout_constraintBottom_toTopOf="@+id/updateBet_button"
        app:layout_constraintEnd_toStartOf="@+id/btn_stand"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_reset"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:enabled="false"
        android:text="Start New Match"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/updateBet_button"
        app:layout_constraintTop_toBottomOf="@+id/btn_stand"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_stand"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:enabled="true"
        android:text="Stand"
        app:layout_constraintBottom_toTopOf="@+id/updateBet_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_hit" />

    <View
        android:id="@+id/betBackground_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#80000000"
        android:elevation="3dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/bet_linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/layout_bg"
        android:elevation="20dp"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/guideline_75Perc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline_25Perc">

        <TextView
            android:id="@+id/textView6"
            style="@style/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:labelFor="@+id/betAmount_editText"
            android:text="@string/betLayoutTitle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TextView120"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/currentMoney"
                android:textAlignment="textStart"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/currentMoney_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zero"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/betAdd5_button"
                style='style="?android:attr/buttonBarButtonStyle'
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/add5" />

            <Button
                android:id="@+id/betAdd10_button"
                style="android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/add10" />

            <Button
                android:id="@+id/betAdd25_button"
                style='style="?android:attr/buttonBarButtonStyle'
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/add25" />

            <Button
                android:id="@+id/betAdd50_button"
                style='style="?android:attr/buttonBarButtonStyle'
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/add50" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/moneySymbol"
                android:textColor="#111111"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/betAmount_editText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number"
                android:text="5"
                android:textSize="18sp" />
        </LinearLayout>

        <Button
            android:id="@+id/betOk_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#86C98A"
            android:text="@string/letsGo" />

    </LinearLayout>

    <TextView
        android:id="@+id/gameState_textview"
        style="@style/gameStateHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/playerTurn"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline_25Perc" />

</android.support.constraint.ConstraintLayout>
